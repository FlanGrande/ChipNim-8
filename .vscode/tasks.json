// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "nim: build (for debugging)",
            "command": "nim",
            "args": [
                "compile",
                "-g",
                "--debugger:native",
                "--debuginfo",
                "--linedir:on",
                "--stacktrace:on",
                "-o:${workspaceFolder}/bin/ChipNim8",
                "ChipNim8.nim"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "type": "shell"
        }
    ]
}